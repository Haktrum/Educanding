<div class='row'>
  <div class='col-sm-6 col-sm-offset-3'>
    <div class='panel panel-default'>
      <div class='panel-body'>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <h2><%= f.label :sign_up %></h2>
          <%= render partial: 'errors', locals: { errors: resource.errors.full_messages } %>

          <div class="field margen-5">
            <%= f.label :nombre, class:"label-control"  %>
            <%= f.text_field :nombre, autofocus: true, class:"form-control" %>
          </div>

          <div class="field margen-5">
            <%= f.label :apellido, class:"label-control"  %>
            <%= f.text_field :apellido, autofocus: true, class:"form-control" %>
          </div>

          <div class="field margen-5">
            <%= f.label :email, class:"label-control"  %>
            <%= f.email_field :email, autofocus: true, class:"form-control" %>
          </div>

          <div class="field margen-5">
            <%= f.label :faculty_id, class:"label-control"  %>
            <%= f.collection_select :faculty_id, Faculty.all, :id, :name, {}, class:"form-control"%>
          </div>

          <div class="field margen-5">
            <%= f.label :password, class:"label-control"  %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> <%= t :minimum_chars %>)</em>
            <% end %>
            <%= f.password_field :password, autocomplete: "off", class:"form-control" %>
          </div>

          <div class="field margen-5">
            <%= f.label :password_confirmation, class:"label-control"  %>
            <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control" %>
          </div>

          <div class="actions margen-5">
            <%= f.submit "OK", class:"btn btn-primary btn-lg btn-block" %>
          </div>

        <% end %>

        <%#= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
