<div class='row'>
  <div class='col-sm-6 col-sm-offset-3'>
    <div class='panel panel-default'>
      <div class='panel-body'>
        <h2>Iniciar sesi√≥n</h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= render partial: 'errors', locals: {errors: [flash[:alert]]} if flash[:alert] %>
          <div class="field margen-5">
            <%= f.label :email, class:"label-control" %>
            <%= f.email_field :email, autofocus: true, class:"form-control" %>
          </div>

          <div class="field margen-5">
            <%= f.label :password, class:"label-control" %>
            <%= f.password_field :password, autocomplete: "off", class:"form-control" %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="field margen-5">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>

          <div class="actions margen-5">
            <%= f.submit "OK", class:"btn btn-info btn-lg btn-block" %>
          </div>
        <% end %>

        <%#= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
