<%= form_for @voto, remote: false do |f| %>
  <% if @voto.id.nil? then %>
    <%= f.hidden_field :user_id %>
    <%= f.hidden_field :votable_id %>
    <%= f.hidden_field :votable_type %>
  <% end %>
  <%= f.button '', :value => 'false', :name => 'voto[positive]', :class => "fa fa-thumbs-o-down fa- fa-2x fa-flip-horizontal fa-fw" %>
  <%= @votos[true] || 0 - 10 * @votos[false] || 0 %> votos
  <%= f.button '', :value => 'true', :name => 'voto[positive]', :class => "fa fa-thumbs-o-up fa-2x fa-fw" %>
<% end %>
