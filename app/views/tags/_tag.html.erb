<div class="col-md-7">
  <%= link_to tag.name, tag_path(tag) %>
  <span class="badge">  <%= tag.questions.count %></span>
</div>
<% if user_signed_in? && current_user.skill?("Editar etiquetas")%>
  <div class="col-md-4 text-right">
    <%= link_to tag_path(tag), method: :delete, class: 'btn btn-danger' do %>
    <i class="fa fa-trash fa-fw"></i>
    <% end %>
  </div>
<% end %>
