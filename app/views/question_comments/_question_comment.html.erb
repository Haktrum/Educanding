<li class="list-group-item" id="question_comment_<%= question_comment.id %>">
  <div class="col-md-6">
    <%= link_to question_comment.user.username, user_path(question_comment.user_id) %>
  </div>
  <div class="col-md-6 text-right">
    <%= link_to question_comment_path(question_comment), method: :delete,
       remote: true, class: "btn btn-danger btn-xs", data: {confirm: 'Â¿EstÃ¡ seguro de eliminar este comentario?'} do %>
    <i class="fa fa-times fa-fw"></i> Eliminar
    <% end if user_signed_in? && (question_comment.user == current_user || current_user.skill?("Modificar contenido")) %>
  </div>

  <div class="panel-body">
    <%= question_comment.body %>
  </div>
  <div class="panel-body">
    <div class="col-md-6">
      <%= question_comment.publish_at %>
    </div>
  </div>
</li>
